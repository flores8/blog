<p id="notice"><%= notice %></p>

<div id="blog-show">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 individual-post">
			<h1><%= markdown @post.title %></h1>
			<p><%= markdown @post.body %></p>
			<p><%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %></p>
		</div>
	</div>

	<!-- Comments -->
	<div class="row">
		<div class="col-md-8 col-md-offset-2 individual-post">
			<div class="comment">
			<% if @post.comments.count === 0 %>
				<h5>No comments. Add one now.</h5>
			<% else %>
				<h4><%= pluralize(@post.comments.count, 'Comment') %>:</h4>
				<% @post.comments.each do |comment| %>
					<p><%= comment.body %></p>
				<% end %>
			<% end %>
			</div>
			<%= render partial: 'comments/form', locals: { post: @post, comment: @comment } %>
		</div>
	</div>
</div>


